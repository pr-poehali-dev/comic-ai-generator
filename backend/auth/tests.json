{
  "tests": [
    {
      "name": "OPTIONS CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "GET profile without auth",
      "method": "GET",
      "path": "/?action=profile",
      "expectedStatus": 401,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Missing email",
      "method": "POST",
      "path": "/",
      "body": {"action": "login", "email": "", "password": "123456"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    },
    {
      "name": "Short password",
      "method": "POST",
      "path": "/",
      "body": {"action": "register", "email": "test@test.com", "password": "12"},
      "expectedStatus": 400,
      "expectedBody": {"error": "string"},
      "bodyMatcher": "partial"
    }
  ]
}
